@model IEnumerable<OuiFund.Domain.Model.User>

@{
    ViewBag.Title = "Users";
}

<h2>Utilisateurs</h2>
<script type="text/javascript">
    $("#utilisateurId").addClass("active");
</script>
<p>
    @Html.ActionLink(" Ajouter", "Index", null, new { @class = "fa fa-plus" })
</p>
<table class="table table-bordered table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AdresseEmail)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ActiveUser)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AdresseEmail)
            </td>
            <td style="text-align:center">
                @Html.DisplayFor(modelItem => item.ActiveUser)
            </td>
            <td style="text-align: center;">
                @Html.ActionLink(" ", "Delete", null, new { userId = item.UtilisateurID }, new { @class = "fa fa-trash-o" })
            </td>
        </tr>
    }

</table>
